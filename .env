# NAS Emulator Core Configuration

# Mount points and storage paths
NAS_MOUNT_POINT=/mnt/nas-mount
NAS_STORAGE_PATH=/var/nas-storage

# Log settings
NAS_LOG_FILE=/var/log/nas-emu.log
NAS_LOG_LEVEL=3

# Network settings
NAS_SMB_PORT=1445

# SMB settings
SMB_SHARE_NAME=nasshare
SMB_USERNAME=nasusr
SMB_PASSWORD=naspass

# For development environment
DEV_HOST_STORAGE_PATH=./nas-storage

# Storage configuration
# USE_HOST_STORAGE=true  # Production: use host volume mount
USE_HOST_STORAGE=false   # Testing: use container internal storage (avoids circular dependency)