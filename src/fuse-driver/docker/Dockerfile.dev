FROM ubuntu:22.04

# Install essential packages
RUN apt-get update && apt-get install -y \
    build-essential \
    fuse \
    libfuse-dev \
    pkg-config \
    git \
    gdb \
    valgrind \
    libcunit1 libcunit1-dev \
    clang-format \
    && rm -rf /var/lib/apt/lists/*

# Create working directory
WORKDIR /app

# Mount point for source code volume
VOLUME ["/app"]

# Default command starts a shell
CMD ["/bin/bash"]
